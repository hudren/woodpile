   </license>

   <url>
      <update label="Hudren Andromeda Connection" url="http://www.hudren.com/update/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.ui" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.runtime" version="3.5.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="com.hudren.woodpile"
         download-size="600"
         install-size="600"
         version="0.7"
         unpack="false"/>

